---
// ThemeToggle component: toggles between light & dark themes using UnoCSS
---

<button
  id="theme-toggle"
  aria-label="Toggle theme"
  class="text-2xl leading-none p-2 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors"
>
  <span class="block dark:hidden">🌙</span>
  <span class="hidden dark:block">☀️</span>
</button>

<script>
  const html = document.documentElement;
  const stored = localStorage.getItem("theme");
  if (stored === "dark") {
    html.classList.add("dark");
  }
  document.getElementById("theme-toggle")?.addEventListener("click", () => {
    const isDark = html.classList.toggle("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
  });
</script>
